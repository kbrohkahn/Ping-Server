<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/inactive</item>
        <item name="colorPrimaryDark">@color/inactive_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="theme_success" parent="AppTheme">
        <item name="colorPrimary">@color/success</item>
        <item name="colorPrimaryDark">@color/success_dark</item>
    </style>

    <style name="theme_fail" parent="AppTheme">
        <item name="colorPrimary">@color/fail</item>
        <item name="colorPrimaryDark">@color/fail_dark</item>
    </style>

</resources>
